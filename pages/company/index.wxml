<!-- 公司相册 开始 -->
<view>
  <view class="title">公司相册({{image.videos.length + image.photos.length}})</view>
  <scroll-view scroll-x="true">
    <view style="display:flex">
      <view style="width:600rpx;margin:10rpx" wx:for="{{image.videos}}" wx:key="this">
        <video muted="true" show-mute-btn="true" src="{{item}}" object-fit="fill"></video>
      </view>
      <view style="width:600rpx;margin:10rpx" wx:for="{{image.photos}}" wx:key="this">
        <van-image src="{{item}}" width="600rpx" height="100%" fit="fill"></van-image>
      </view>
    </view>
  </scroll-view>
</view>
<!-- 公司相册 结束 -->